#include <bits/stdc++.h>

#define INF LLONG_MAX

using namespace std;

vector<long long> T;
int n, q, k, shift, w, a, b, c;

void upd(int u, int v) {
    u+=shift;
    T[u] += v;
    while (u/=2) T[u]+=v;
}

long long ask(int l, int r, int x=0, int y=shift-1,int u=1) {
    if (y < l || x > r) return 0;
    if (l <= x && y <= r) return T[u];
    int m = (x+y)/2;
    return ask(l,r,x,m,2*u)+ask(l,r,m+1,y,2*u+1);
}

int main() {
    cin.tie(NULL);cout.tie(NULL);ios::sync_with_stdio(0);
    cin >> n >> q;
    while ((1<<k) < n) k++;
    shift = (1<<k);
    T.resize(2*shift);
    while (q--) {
        cin >> w >> a >> b;
        if (w == 2) cout << ask(a-1,b-1) << "\n";
        else upd(a-1,b);
    }
}
